<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.gloryBooks.dao.GloryBookDao">

    <resultMap id="GloryBook" type="GloryBook">
        <result column="book_id" property="bookId"/>
        <result column="book_name" property="bookName"/>
        <result column="book_price" property="bookPrice"/>
        <result column="book_author" property="bookAuthor"/>
        <result column="book_publisher" property="bookPublisher"/>
        <result column="book_content" property="bookContent"/>
        <result column="book_image" property="bookImage"/>
    </resultMap>

    <select id="getBookList" parameterType="map" resultType="GloryBook" resultMap="GloryBook">
        SELECT * FROM glorybook WHERE ${searchKey} LIKE '%' || #{searchValue} || '%'
    </select>

    <select id="getReadBook" parameterType="int" resultType="GloryBook" resultMap="GloryBook">
        SELECT * FROM glorybook WHERE book_id = #{bookId}
    </select>

    <insert id="insertBook" parameterType="GloryBook">
        INSERT INTO glorybook (book_id, book_name, book_price, book_author, book_publisher, book_content) VALUES (glorybook_seq.nextval, #{bookName}, #{bookPrice}, #{bookAuthor}, #{bookPublisher}, #{bookContent})
    </insert>


    <delete id="deleteBook" parameterType="int">
        delete glorybook where book_id = #{bookId}
    </delete>

    <update id ="updateBook" parameterType="GloryBook">
        update gloryBook set book_name = #{bookName},
        book_price = #{bookPrice}, book_author = #{bookrAuthor}, book_publisher = #{bookPublisher}, book_content = #{bookContent}
        where book_id = #{bookId}

    </update>
</mapper>